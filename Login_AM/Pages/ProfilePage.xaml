<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login_AM.ProfilePage"
             Title="Perfil">
    <StackLayout>
        <Image Source="profile_image.png" HeightRequest="100" WidthRequest="100" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
        <Label Text="Nombre de usuario" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
        <Label Text="Correo electrónico" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
        <!-- Agrega más elementos como botones, etiquetas, etc., según sea necesario -->


        <ScrollView>


            <Label HorizontalOptions="Center" Margin="10,-1,0,0" WidthRequest="360"  Text="Perfil"  TextColor="Black"/>



        </ScrollView>



    </StackLayout>
</ContentPage>
